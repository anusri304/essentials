<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph7"
    app:startDestination="@+id/nav_top_home">
    <!-- Drawer Navigation -->
    <fragment
        android:id="@+id/nav_top_home"
        android:name="com.example.essentials.fragment.ProductFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_top_drawer_nav" >
        <action
            android:id="@+id/navigateToProductDetailFragment"
            app:destination="@id/nav_product_detail"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/nav_top_login"
        android:name="com.example.essentials.fragment.NavFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_nav" />
    <fragment
        android:id="@+id/nav_top_register"
        android:name="com.example.essentials.fragment.NavFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_nav" />
    <fragment
        android:id="@+id/nav_top_promotion"
        android:name="com.example.essentials.fragment.NavTopDrawerFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_top_drawer_nav" />
    <fragment
        android:id="@+id/nav_top_category"
        android:name="com.example.essentials.fragment.NavTopDrawerFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_top_drawer_nav" />
    <fragment
        android:id="@+id/nav_top_order"
        android:name="com.example.essentials.fragment.NavTopDrawerFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_top_drawer_nav" />
    <fragment
        android:id="@+id/nav_top_cart"
        android:name="com.example.essentials.fragment.NavTopDrawerFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_top_drawer_nav" />
    <!-- Bottom Navigation -->
    <fragment
        android:id="@+id/nav_bottom_home"
        android:name="com.example.essentials.fragment.NavFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_nav" />
    <fragment
        android:id="@+id/nav_bottom_category"
        android:name="com.example.essentials.fragment.NavFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_nav" />
    <fragment
        android:id="@+id/nav_bottom_cart"
        android:name="com.example.essentials.fragment.NavFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_nav" />
    <fragment
    android:id="@+id/nav_bottom_wishlist"
    android:name="com.example.essentials.fragment.WishlistFragment"
    android:label="@string/app_name"
    tools:layout="@layout/fragment_nav" />
    <fragment
        android:id="@+id/nav_product_detail"
        android:name="com.example.essentials.fragment.ProductDetailFragment"
        android:label="@string/app_name"
        tools:layout="@layout/fragment_nav" >
        <argument
            android:name="productPresentationBean"
            app:argType="com.example.essentials.activity.bean.ProductPresentationBean" />
    </fragment>
</navigation>